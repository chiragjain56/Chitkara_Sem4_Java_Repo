//		ce.getArea();
//		System.out.println(ce.getPerameter());
//
//		ce.toMake();

		Engine eg = new Car();
		eg.pushButton(); // engine with music

		eg.toStopEngine(); // engine stop
		
		MusicPlayer1 ms = new Car();
		ms.toStopMusicPlayer(); //music player stop

	}
}