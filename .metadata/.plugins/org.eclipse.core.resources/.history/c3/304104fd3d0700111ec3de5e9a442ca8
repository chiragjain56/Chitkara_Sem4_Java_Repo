package com.chitkara.bitwise;

public class BitWise {
	public static void main(String[] args) {

		int a, b;

		a = 5; // 0101
		b = 6; // 0110

		System.out.println(a | b); // 0111 -->7
		System.out.println(a & b); // 0100 -->4
		System.out.println(a ^ b); // 0011 -->3

		System.out.println(a << 1); // 1010 -->10
		System.out.println(a << 2); // 10100 --> 20

		System.out.println(a >> 1); // 0010 -->2
		System.out.println(b >> 2); // 0001 -->1

		System.out.println(~a); // 1010 --> -6
		System.out.println(~b); // 1001 --> -7
		System.out.println(~(1 >> a));

	}
}
