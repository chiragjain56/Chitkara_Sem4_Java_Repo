package com.chitkara.interfac;

/*
 * Feature, Before Java 8, After Java 8
 * 
 * Abstract Methods, Allowed, Allowed
 * 
 * Method Bodies, Impossible, Possible(via default)
 * 
 * Static Methods, Not Allowed, Allowed
 * 
 * Lambdas, No, Yes(Functional Interfaces)
 */

interface Shape {
	String colorOfShape = "Red"; // psf --> public static final
//	colorOfShape ="blue";

	double getArea(); // abstract method

	void getPerimeter(); // abstract method

	default void getMessage() {
		System.out.println("Shape is Created...");
	}

	static void getChoclateShape() {
		if (validShape("hiiiii")) {

			System.out.println("you can have choclate...");
		} else {
			System.out.println("no, you can not have choclate...");
		}
	}

	private static boolean validShape(String name) {
		if (name == "hi") {
//			System.out.println("Valid");
			return true;
		} else {
//			System.out.println("Invalid...");
			return false;
		}
	}

}

interface CreateToy extends Shape {

	void getToy();

}

class Rectangle implements Shape, CreateToy {

	double length;
	double width;

	Rectangle(double l, double w) {
		this.length = l;
		this.width = w;
	}

	public double getArea() {
		return length * width;

	}

	@Override
	public void getPerimeter() {
		System.out.println(2 * (length + width));

	}

	@Override
	public void getToy() {
//		return "Toy is Created...";
		System.out.println("Toy is Created...");
	}

}

class Square implements Shape, CreateToy {

	double length;

	Square(double l) {
		this.length = l;

	}

	public double getArea() {
//		return length * length;
		return Math.pow(length, 2);

	}

	@Override
	public void getPerimeter() {
		System.out.println(4 * (length));

	}

	@Override
	public void getToy() {
		// TODO Auto-generated method stub

	}

}

// I can not create an object of the interface. can not create constructor
// an interface can not have an object's states.

class Main15 {
	public static void main(String[] args) {
		Shape.getChoclateShape();

		Shape shape = new Rectangle(5, 10);

		System.out.println(shape.getArea());
		shape.getPerimeter();

		CreateToy createToy = new Rectangle(2, 3);
		createToy.getToy();

		System.out.println("==========================");
		Shape shape1 = new Square(5.0);
		System.out.println(shape1.getArea());
		shape1.getPerimeter();

	}

}
